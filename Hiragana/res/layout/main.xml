<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:background="#ffffff">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageHiragana" android:layout_gravity="center_horizontal"
            android:src="@drawable/hiragana_a"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/layoutScore">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/textCorrect" android:layout_gravity="center" android:layout_weight="0.5"
                android:textAlignment="center" android:textColor="#00d921"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceLarge" android:text="Large Text"
                  android:id="@+id/textWrong" android:layout_weight="0.5"
                  android:textAlignment="center" android:textColor="#d8002e" android:layout_gravity="center"/>
        <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="X"
                android:id="@+id/button_reset" android:layout_weight="0.1"/>
    </LinearLayout>
    <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_gravity="center_horizontal"
            android:id="@+id/layoutButtons">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ka"
            android:id="@+id/button_ka"
            android:layout_row="0"
            android:layout_column="7"
            style="?android:attr/buttonStyleSmall" />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="a"
                android:id="@+id/button_a" android:layout_row="0" android:layout_column="8"
            style="?android:attr/buttonStyleSmall" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ki"
            android:id="@+id/button_ki"
            android:layout_row="1"
            android:layout_column="7" />

        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="i"
                android:id="@+id/button_i" android:layout_row="1" android:layout_column="8"
            style="?android:attr/buttonStyleSmall" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ku"
            android:id="@+id/button_ku"
            android:layout_row="2"
            android:layout_column="7" />

        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="u"
                a
            ndroid:id="@+id/button_u" android:layout_row="2" android:layout_column="8"
            style="?android:attr/buttonStyleSmall" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ke"
            android:id="@+id/button_ke"
            android:layout_row="3"
            android:layout_column="7" />

        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="e"
                android:id="@+id/button_e" android:layout_row="3" android:layout_column="8"
            style="?android:attr/buttonStyleSmall" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ko"
            android:id="@+id/button_ko"
            android:layout_row="4"
            android:layout_column="7" />

        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="o"
                android:id="@+id/button_o" android:layout_row="4" android:layout_column="8"
            style="?android:attr/buttonStyleSmall" />
    </GridLayout>
</LinearLayout>

